<div id="todo-page-container">
  <div id="header-section-container">
    <div class="header-section">
      <%= form_for @todo do |form| %>
        <div class="title-container">
          <div class="form-input-container">
            <p class="form-title"> HEROS <span class="form-title-b">TODO</p>
            <%= submit_tag("ADD") %>
            <%= form.text_field :todo %>
          </div>
          <div class="profile-image-container" id="profile-image-container">
            <img src="https://res.cloudinary.com/xrole/image/upload/v1577661794/BlueFlameIndoors/heroUser.jpg">
              <div class="control-container" id="control-container">
                <p> <%= link_to 'profile', 'users/id/edit', method: 'get', class: 'link-style space-up space-down' %> <p />
                <%= link_to "Logout", 'sessions/destroy', method: 'delete', class: "link-style space-up" %>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="todo-list-section">
    <div class="date-section">
     <p> MONDAY </p>
     <div>
      <p>Date:</p>
     </div>
    </div>
    <di>
      <% @todos.each do |todo| %>
        <div class="todo-container">
          <div class="todo-container-inner">
            <p> <input type="checkbox" id= <%= todo.id %> name="vehicle" value="Bike"> <span class="todo"> <%= todo.todo %> </span> </p>
          </div>
          <div class="todo-container-actions">
            <div class="edit">
              <%= link_to "Edit", edit_todo_path(todo), class: 'link-style' %>
            </div>
            <div class="delete">
              <%= link_to "Delete", todo_path(todo), method: 'delete', class: 'link-style' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
